<section class="h-100 h-custom" style="background-color: #ffffff;">
    <div class="container py-4 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12">

                <div class="card card-registration card-registration-2" style="border-radius: 15px;">
                    <div class="card-body p-0">
                        <div class="row g-0">
                            <div class="col-lg-12">
                                <div class="p-5">
                                    <br><br><br>

                                    <div class="container-xl px-4 mt-4">
                                        <!-- Account page navigation-->
                                        <nav class="nav nav-borders">
                                            <a class="nav-link ms-0" href="user-profile">Profile</a>
                                            <a class="nav-link" href="address"> Add New Address</a>
                                            <a class="nav-link" href="password-change">Password</a>
                                            <a class="nav-link active " href="order">My Orders</a>
                                            {{!-- <a class="nav-link"
                                                href="https://www.bootdey.com/snippets/view/bs5-edit-notifications-page"
                                                target="__blank">Notifications</a> --}}
                                        </nav>
                                        <hr class="mt-0 mb-4">

                                        <div class="container-xl px-4 mt-4">
                                            <div class="row">


                                                <div class="col-md-12">
                                                    <h4>Order details</h4>
                                                    <div class="table-responsive">


                                                        <table id="mytable" class="table table-bordred table-striped">

                                                            <thead>

                                                                <th><input type="checkbox" id="checkall" /></th>
                                                                <th>OrderId</th>
                                                                <th>Name</th>
                                                                <th>Price</th>
                                                                <th>Quantity</th>
                                                                <th>Status</th>
                                                                <th>Action</th>

                                                            </thead>
                                                            <tbody>
                                                                {{#each order}}
                                                                {{#each product}}
                                                                <tr>
                                                                    <td><input type="checkbox" class="checkthis" /></td>
                                                                    <td><a href="/single-order?id={{../orderId}}">
                                                                            {{../orderId}}</a></td>
                                                                    <td>{{this.name}}</td>
                                                                    <td>{{this.price}}</td>
                                                                    <td>{{this.quantity}}</td>
                                                                    <td>{{../status}}</td>
                                                                    <td><a href="/single-order?id={{../orderId}}"
                                                                            class="">View</a></td>
                                                                    <input type="hidden" value="{{this._id}}">
                                                                    {{!-- <td>
                                                                        <p data-placement="top" data-toggle="tooltip"
                                                                            title="Delete"><button
                                                                                class="btn btn-danger btn-xs"
                                                                                data-title="Delete" data-toggle="modal"
                                                                                data-target="#delete"><span
                                                                                    class="glyphicon glyphicon-trash"></span></button>
                                                                        </p>
                                                                    </td> --}}
                                                                </tr>
                                                                {{/each}}
                                                                {{/each}}

                                                            </tbody>

                                                        </table>

                                                        <div class="clearfix"></div>


                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    $(document).ready(function () {
        $("#mytable #checkall").click(function () {
            if ($("#mytable #checkall").is(':checked')) {
                $("#mytable input[type=checkbox]").each(function () {
                    $(this).prop("checked", true);
                });

            } else {
                $("#mytable input[type=checkbox]").each(function () {
                    $(this).prop("checked", false);
                });
            }
        });

        $("[data-toggle=tooltip]").tooltip();
    });

    $(document).ready(function () {
        $('#list_users').DataTable();
    });


</script>