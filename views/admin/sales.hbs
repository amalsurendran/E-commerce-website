        // Add event listener for the date range inputs
        $('#fromDate, #toDate').on('change', function () {
            var fromDate = $('#fromDate').val();
            var toDate = $('#toDate').val();
            console.log('fromDate:', fromDate);
            console.log('toDate:', toDate);

