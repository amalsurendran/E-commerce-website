


<body>
    <div class="container-fluid">
        <div class="sub-container thehome">
            <div class="p-3">
                <h1 class="thenewarrival">Order Management</h1>

                <div class="theArea">
                    <table class="table " >
                        <thead>
                            <tr>
                                <th scope="col">Order id</th>
                                <th scope="col">Products</th>
                                <th scope="col">Date</th>
                                
                                <th scope="col">Payment Method</th>
                                <th scope="col">Status</th>
                                <th scope="col">Order Price</th>
                                <th scope="col">Address</th>
                                <th scope="col">Action</th>


                            </tr>
                        </thead>
                        <tbody>
                            {{#each orders}}
                            <tr>
                                <td>{{this.orderId}}</td>
                                <td> <a href="/admin/view-product?id={{this._id}}" class="btn btn-success">View
                                        Products</a> </td>
                                <td>{{this.date}}</td>
                                
                                <td>
                                    {{#ifeq this.payment_method 1}}
                                    <h5 class="text-success" >COD</h5>
                                    {{/ifeq}}

                                    {{#ifeq this.payment_method 2}}
                                    <h5 class="text-success" >RAZORPAY</h5>
                                    {{/ifeq}}
                                </td>
                                <td><strong>{{status}}</strong></td>
                                <td>â‚¹{{this.subtotal}}</td>
                                <td>{{this.addressId}}</td>
                                <td>
                                    
                                    {{#ifeq this.status "processing"}}
                                    <a href="/admin/change-status?id={{this._id}}" class="btn btn-warning " onclick="return confirm('Are you sure?')" >Ship Order</a>
                                    {{/ifeq}}

                                    {{#ifeq this.status "Shipped"}}
                                    <a href="/admin/change-status?id={{this._id}}" class="btn btn-primary" onclick="return confirm('Are you sure?')" >Out of Delivery</a>
                                    {{/ifeq}}
                                     {{#ifeq this.status "Out for Delivery"}}
                                    <a href="/admin/change-status?id={{this._id}}" class="btn btn-primary" onclick="return confirm('Are you sure?')" > Deliver Order</a>
                                    {{/ifeq}}
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        
    </div>
    
</body>